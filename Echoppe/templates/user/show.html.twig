{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Profil de {{ user.pseudo }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.client.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.client.prenom }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ user.client.contact }}</td>
            </tr>
            {% for adresse in user.client.adresse %}
                <tr>
                <th>Adresse</th>
                <td>{{ adresse.pays }}, {{ adresse.nomVille }} {{ adresse.cp }}, {{ adresse.numRue }} {{ adresse.nomRue }} </td>
                <td><a href="{{ path('app_adresse_edit', {'id': adresse.id}) }}">Modifier</a></td>
                <td>{{ include('adresse/_delete_form.html.twig') }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_edit_profil', {'id': user.id}) }}">Modifier profil</a>
    <a href="{{ path('app_adresse_new', {'id': user.id}) }}">Ajouter une adresse</a>
    <a href="{{ path('app_user_edit_password', {'id': user.id}) }}">Modifier mot de passe</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
